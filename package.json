{
  "name": "portfolio-monorepo",
  "version": "1.0.0",
  "description": "Multi-version portfolio monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:proto": "cd apps/nextjs-proto && npm run dev",
    "dev:simple": "cd apps/portfolio-simple && npm run dev",
    "dev:dark": "cd apps/portfolio-dark && npm run dev",
    "build:proto": "cd apps/nextjs-proto && npm run build",
    "build:simple": "cd apps/portfolio-simple && npm run build",
    "build:dark": "cd apps/portfolio-dark && npm run build",
    "build:all": "npm run build:proto && npm run build:simple && npm run build:dark",
    "start:proto": "cd apps/nextjs-proto && npm run start",
    "preview:simple": "cd apps/portfolio-simple && npm run preview",
    "preview:dark": "cd apps/portfolio-dark && npm run preview",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces -- --fix",
    "type-check": "npm run type-check --workspaces",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/dist node_modules",
    "clean:builds": "rm -rf apps/*/.next apps/*/dist",
    "install:all": "npm install && npm run install --workspaces",
    "size": "npm run build:all && du -sh apps/*/dist apps/*/.next 2>/dev/null || echo 'Build artifacts not found'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
